---
interface Props {
  brandTheme?: 'default' | 'brooklynfi' | 'gemifi';
}

const { brandTheme = 'default' } = Astro.props;

const currentYear = new Date().getFullYear();

const getBrandColors = () => {
  switch (brandTheme) {
    case 'brooklynfi':
      return {
        bg: 'bg-brooklynfi-primary',
        text: 'text-white',
        muted: 'text-white/60',
        hover: 'hover:text-brooklynfi-accent',
        border: 'border-white/10'
      };
    case 'gemifi':
      return {
        bg: 'bg-gemifi-primary',
        text: 'text-white',
        muted: 'text-white/60',
        hover: 'hover:text-gemifi-accent',
        border: 'border-white/10'
      };
    default:
      return {
        bg: 'bg-primary-900',
        text: 'text-primary-50',
        muted: 'text-primary-400',
        hover: 'hover:text-accent-400',
        border: 'border-primary-800'
      };
  }
};

const colors = getBrandColors();

const socialLinks = [
  { href: 'https://linkedin.com/in/', label: 'LinkedIn', icon: 'linkedin' },
  { href: 'https://twitter.com/', label: 'Twitter', icon: 'twitter' },
  { href: 'https://youtube.com/@', label: 'YouTube', icon: 'youtube' },
];

const footerLinks = [
  { href: '/about', label: 'About' },
  { href: '/blog', label: 'Blog' },
  { href: '/speaking', label: 'Speaking' },
  { href: '/media', label: 'Media' },
  { href: '/podcast', label: 'Podcast' },
  { href: '/brooklyn-fi', label: 'Brooklyn Fi' },
  { href: '/gemifi', label: 'Gemifi' },
  { href: '/personal', label: 'Life' },
];
---

<footer class={`${colors.bg} ${colors.text}`}>
  <div class="container-wide py-12 md:py-16">
    <div class="grid md:grid-cols-3 gap-8 md:gap-12">
      <!-- Brand Column -->
      <div>
        <a href="/" class="font-serif text-2xl font-semibold tracking-tight">Shane</a>
        <p class={`mt-4 ${colors.muted} text-sm leading-relaxed`}>
          Entrepreneur, speaker, and builder. Sharing insights on finance, technology, and life.
        </p>
        
        <!-- Social Links -->
        <div class="flex gap-4 mt-6">
          {socialLinks.map(link => (
            <a 
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class={`${colors.muted} ${colors.hover} transition-colors`}
              aria-label={link.label}
            >
              {link.icon === 'linkedin' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              )}
              {link.icon === 'twitter' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              )}
              {link.icon === 'youtube' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>
      
      <!-- Links Column -->
      <div>
        <h4 class="font-semibold mb-4">Explore</h4>
        <ul class="space-y-2">
          {footerLinks.slice(0, 4).map(link => (
            <li>
              <a href={link.href} class={`text-sm ${colors.muted} ${colors.hover} transition-colors`}>
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- More Links Column -->
      <div>
        <h4 class="font-semibold mb-4">More</h4>
        <ul class="space-y-2">
          {footerLinks.slice(4).map(link => (
            <li>
              <a href={link.href} class={`text-sm ${colors.muted} ${colors.hover} transition-colors`}>
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class={`mt-12 pt-8 border-t ${colors.border} flex flex-col md:flex-row justify-between items-center gap-4`}>
      <p class={`text-sm ${colors.muted}`}>
        Â© {currentYear} Shane. All rights reserved.
      </p>
      <p class={`text-sm ${colors.muted}`}>
        Built with <a href="https://astro.build" target="_blank" rel="noopener" class={colors.hover}>Astro</a>
      </p>
    </div>
  </div>
</footer>

