---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionHeader from '../components/SectionHeader.astro';
import Card from '../components/Card.astro';

const sections = [
  {
    title: 'About',
    description: 'My journey, skills, and the quirky path that brought me here.',
    href: '/about',
    icon: '◈',
  },
  {
    title: 'Blog',
    description: 'Thoughts on finance, technology, entrepreneurship, and life.',
    href: '/blog',
    icon: '✎',
  },
  {
    title: 'Speaking',
    description: 'Keynotes, panels, and presentations on building businesses.',
    href: '/speaking',
    icon: '◎',
  },
  {
    title: 'Media',
    description: 'Articles, interviews, and podcast appearances.',
    href: '/media',
    icon: '◇',
  },
  {
    title: 'The Liquidity Event',
    description: 'My podcast with Brooklyn Fi exploring exits and entrepreneurship.',
    href: '/podcast',
    icon: '▶',
  },
  {
    title: 'Brooklyn Fi',
    description: '8 years building a financial advisory firm from the ground up.',
    href: '/brooklyn-fi',
    icon: '▣',
  },
  {
    title: 'Gemifi',
    description: 'The evolution of our fintech product and its journey.',
    href: '/gemifi',
    icon: '◆',
  },
  {
    title: 'Life',
    description: 'Beyond work: sailing, Mexico City, and my four-legged friend.',
    href: '/personal',
    icon: '❋',
  },
];
---

<BaseLayout title="Shane | Entrepreneur, Speaker, Builder">
  <!-- Hero Section -->
  <section class="min-h-[85vh] flex items-center relative overflow-hidden">
    <!-- Background pattern -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary-50 via-white to-accent-50/30"></div>
    <div class="absolute inset-0 opacity-[0.03]" style="background-image: url('data:image/svg+xml,<svg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"><g fill=\"none\" fill-rule=\"evenodd\"><g fill=\"%23000000\" fill-opacity=\"1\"><path d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/></g></g></svg>');"></div>
    
    <div class="container-wide relative z-10">
      <div class="max-w-4xl">
        <p class="text-accent-600 font-medium mb-4 animate-fade-in">Hello, I'm</p>
        <h1 class="mb-6 animate-fade-in-up">
          <span class="block">Shane</span>
          <span class="block text-gradient text-4xl md:text-5xl lg:text-6xl mt-2">
            Entrepreneur. Speaker. Builder.
          </span>
        </h1>
        <p class="text-xl md:text-2xl text-primary-600 leading-relaxed max-w-2xl mb-8 animate-fade-in-up stagger-2">
          Founder at Brooklyn Fi, creator of Gemifi, and host of The Liquidity Event podcast. 
          I help entrepreneurs navigate the financial complexities of building and exiting businesses.
        </p>
        
        <div class="flex flex-wrap gap-4 animate-fade-in-up stagger-3">
          <a href="/about" class="btn-primary">
            Learn More
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a href="/speaking" class="btn-secondary">
            Book Me to Speak
          </a>
        </div>
      </div>
    </div>
    
    <!-- Decorative element -->
    <div class="absolute right-0 top-1/2 -translate-y-1/2 w-1/3 h-2/3 bg-gradient-to-l from-accent-100/50 to-transparent rounded-l-full hidden lg:block"></div>
  </section>
  
  <!-- Navigation Cards Section -->
  <section class="section-padding bg-white">
    <div class="container-wide">
      <SectionHeader 
        title="Explore" 
        subtitle="Dive into my work, writing, and adventures. Each section tells a different part of the story."
        align="center"
      />
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {sections.map((section, index) => (
          <a 
            href={section.href}
            class={`card group hover:border-accent-400 transition-all duration-300 animate-on-scroll stagger-${(index % 6) + 1}`}
          >
            <span class="text-3xl mb-4 block text-accent-500 group-hover:scale-110 transition-transform duration-300">
              {section.icon}
            </span>
            <h3 class="text-xl font-semibold mb-2 group-hover:text-accent-600 transition-colors">
              {section.title}
            </h3>
            <p class="text-primary-600 text-sm">
              {section.description}
            </p>
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Featured / Quick Highlights -->
  <section class="section-padding bg-primary-900 text-primary-50">
    <div class="container-wide">
      <div class="grid md:grid-cols-3 gap-12 md:gap-8">
        <div class="text-center animate-on-scroll">
          <p class="text-5xl md:text-6xl font-serif font-bold text-accent-400 mb-2">8+</p>
          <p class="text-primary-300">Years at Brooklyn Fi</p>
        </div>
        <div class="text-center animate-on-scroll stagger-1">
          <p class="text-5xl md:text-6xl font-serif font-bold text-accent-400 mb-2">50+</p>
          <p class="text-primary-300">Speaking Engagements</p>
        </div>
        <div class="text-center animate-on-scroll stagger-2">
          <p class="text-5xl md:text-6xl font-serif font-bold text-accent-400 mb-2">100+</p>
          <p class="text-primary-300">Podcast Episodes</p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="section-padding">
    <div class="container-narrow text-center">
      <h2 class="mb-6 animate-on-scroll">Let's Connect</h2>
      <p class="text-xl text-primary-600 mb-8 animate-on-scroll stagger-1">
        Whether you're looking for a speaker, want to discuss your business journey, 
        or just want to say hello — I'd love to hear from you.
      </p>
      <div class="flex flex-wrap justify-center gap-4 animate-on-scroll stagger-2">
        <a href="/speaking" class="btn-accent">
          Book a Speaking Engagement
        </a>
        <a href="mailto:hello@example.com" class="btn-secondary">
          Get in Touch
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

